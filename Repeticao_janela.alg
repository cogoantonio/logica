inicio
    variavel inteiro limite <- 5
    variavel inteiro contador <- 0
    constante inteiro incremento <- 1
    
    enquanto ( contador < limite ) faz
        escrever "Contador:" , contador , "\n"
        escrever "Fechando a janela" , "\n"
        escrever "Fechando a cortina" , "\n"
        
        contador <- contador + incremento
        
    fimenquanto
    
fim

